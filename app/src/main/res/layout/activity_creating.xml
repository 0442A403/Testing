<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/trueScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.petro.newtesting.CreatingActivity"
    android:padding="5dp"
    android:overScrollMode="never">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/save_test"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:src="@drawable/ic_save_black_24dp"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/none_description"/>
            <EditText
                android:id="@+id/testName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTintMode="@android:color/holo_blue_dark"
                android:hint="@string/search_test"
                android:textColorHint="@color/standartGray"
                android:textSize="30sp"
                android:layout_toStartOf="@id/save_test"
                android:capitalize="sentences"/>
        </RelativeLayout>
        <HorizontalScrollView
            android:id="@+id/trueHorizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/horizontalScrollView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"/>
                <Button
                    android:id="@+id/addTask"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_add_black_24dp"/>
            </LinearLayout>
        </HorizontalScrollView>
        <LinearLayout
            android:id="@+id/taskLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"/>
    </LinearLayout>
</ScrollView>
